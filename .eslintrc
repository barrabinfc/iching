{
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "strict": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/prop-types": 0,
    "react/sort-comp": [1, {
      "order": [
        "lifecycle",
        "state",
        "render",
        "everything-else"
      ]
    }],

    // Temporarirly disabled due to a possible bug in babel-eslint (todomvc example)
    "block-scoped-var": 0,

    // Temporarily disabled for test/* until babel/babel-eslint#33 is resolved
    "padded-blocks": 0,
    "no-console": 0,

     "comma-dangle": 0,
     "no-else-return": 0,
     "no-unused-expressions": 0,
     "no-multiple-empty-lines": 0,
     "no-multi-spaces": 0,
     "spaced-comment": 0,
     "no-alert": 0,
     "no-debugger": 0,
     "no-unused-vars": 0,
     "key-spacing": 0,
     "prefer-const": 0,
     "comma-spacing": 0,
     "func-names": 0,
     "camelcase": 0,
     "semi": 0,
     "indent": 0,
     "no-trailing-space": 0,
     "object-curly-spacing": 0,
     "space-in-parens": 0,
     "react/jsx-indent-props": 0,
     "react/jsx-closing-bracket-location": 0,
     "react/no-multi-comp": 0,
     "array-bracket-spacing": 0,
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "__PHONEGAP__": true,
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true
  }
}
